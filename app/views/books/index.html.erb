<h1>Books</h1>

<table class="table">
 
  <tr class="table-dark">
    <th>Name</th>
    <th>Price</th>
    <th>ISBN</th>
    <th>Author</th>
    <th>Quantity</th>
    <th></th>
  </tr>
<% @books.each do |book|%>
   
   <tr>
      <td><%= book.name %></td>
      <td><%= book.price%></td>
      <td><%= book.isbn %></td>
      <td><%= book.author_name %></td>
      <td><%= book.quantity_available%></td>
      <td><%= link_to 'show', book_path(book)%></td>
      <td><%= link_to 'edit', edit_book_path(book)%></td>
    </tr>
<%end%>
</table>

<%= link_to "New book", new_book_path %>
